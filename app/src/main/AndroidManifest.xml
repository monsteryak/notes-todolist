<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.monsteryak.notestodo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesToDo">
        <activity
            android:name=".todo.TodoActivity"
            android:exported="true" />
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.NotesToDo.NoActionBar" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".note.EditNote"
            android:exported="true"
            android:theme="@style/Theme.NotesToDo.NoActionBar" />
        <activity
            android:name=".note.AddNote"
            android:exported="true"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.NotesToDo.NoActionBar" />
        <activity
            android:name=".note.NoteDetails"
            android:exported="true"
            android:label="@string/title_activity_note_details"
            android:theme="@style/Theme.NotesToDo.NoActionBar" />
        <activity
            android:name=".Home"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.NotesToDo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>